{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Easy",
  "version": "0.1.0",
  "identifier": "com.backhackathon.easy",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run tauri:prep-backend && npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Easy",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
